<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:behavior_hideable="false"
              android:visibility="gone"
              android:layout_alignParentBottom="true"
              android:background="@color/colorWhite"
              android:id="@+id/bottom_sheet__confirmPickup"
              app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">



<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:orientation="vertical">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/confirm_your_pickup"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/location_black"
                    android:id="@+id/img_loc_confirmPickup"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="B42 ING"
                    android:maxLines="3"
                    android:layout_marginRight="@dimen/_36sdp"
                    android:id="@+id/pickupLoc_ConfirmRide"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_toRightOf="@+id/img_loc_confirmPickup"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sdp"/>

            <ImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/eclipse"
                    android:id="@+id/img_search_confirmPickup"/>

        </RelativeLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/rounded_full_themecolored_corners"
                android:id="@+id/confirm_pickup"
                android:textAllCaps="true"
                android:text="@string/confirm_pickup"/>


    </LinearLayout>
</LinearLayout>