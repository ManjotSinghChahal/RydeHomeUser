<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:text="@string/schedule_pickup"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/very_light_gray"></View>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lin_datePicker"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/selectDate_schedulePickup"
                android:layout_gravity="center_vertical"
                android:text="@string/select_date"/>
        <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/calendar"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/very_light_gray"></View>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lin_timePicker"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/selectTime_schedulePickup"
                android:layout_gravity="center_vertical"
                android:text="@string/select_time"/>
        <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/clock"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@color/very_light_gray"></View>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/lin_cancel_pickup"
                android:background="@drawable/rounded_edges_themecolored_corners"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorAppTheme"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_6sdp"
                android:id="@+id/lin_confirm_pickup"
                android:background="@drawable/rounded_full_themecolored_corners"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:text="@string/confirm"
                    android:gravity="center"/>

        </LinearLayout>
        </LinearLayout>


    </LinearLayout>