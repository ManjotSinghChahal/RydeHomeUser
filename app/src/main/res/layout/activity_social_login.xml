<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootSocialLogin"
        tools:context=".ui.activities.signUp.fragments.socialLogin.SocialLoginActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorAppTheme">

        <RelativeLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:id="@+id/relBack_socialLogin">

            <ImageView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_icon_white"/>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_180sdp"
            android:id="@+id/fbLogin"
            android:layout_centerHorizontal="true"
            android:src="@drawable/facebook_btn"/>


</RelativeLayout>