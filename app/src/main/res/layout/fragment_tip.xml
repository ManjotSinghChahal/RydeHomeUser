<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorWhite"
              tools:context=".ui.activities.home.fragment.tip.Tip">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/colorAppTheme">
        <RelativeLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:id="@+id/relBack_tip">
            <ImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_icon_white"/>
        </RelativeLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/tip"
                android:layout_marginLeft="@dimen/_62sdp"
                android:layout_toRightOf="@+id/rel_menu_home"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16sdp"/>

    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/user_icon"/>
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_6sdp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="John Smith"
                            android:textStyle="bold"
                            android:id="@+id/txtview_userName_Tip"
                            android:textSize="@dimen/_15sdp"/>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_below="@+id/txtview_userName_Tip"
                                  android:orientation="horizontal">

                        <ImageView
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/star_theme"/>
                        <ImageView
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/star_theme"/>
                        <ImageView
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/star_theme"/>
                        <ImageView
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/star_theme"/>
                        <ImageView
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/star_theme"/>


                    </LinearLayout>

                    <!-- <androidx.appcompat.widget.AppCompatRatingBar
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:scaleX=".5"
                             android:stepSize="10"
                             android:scaleY=".5"
                             android:theme="@style/RatingBar_theme"
                             android:layout_below="@+id/txtview_userName_Tip"/>-->

                </RelativeLayout>

            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/very_light_gray"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_16sdp"></View>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:text="@string/give_compliment"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/driverName_tip"
                    android:textSize="@dimen/_28sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/add_a_tip"/>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal">


                <RelativeLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:id="@+id/rel_tipTwo_tip"
                        android:background="@drawable/circle_apptheme_outlining">
                    <TextView
                            android:id="@+id/circularTextView_tip1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/colorBlack"
                            android:layout_centerInParent="true"
                    />
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:id="@+id/rel_tipThree_tip"
                        android:background="@drawable/circle_apptheme_outlining">
                    <TextView
                            android:id="@+id/circularTextView_tip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/colorBlack"
                            android:layout_centerInParent="true"
                    />
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:id="@+id/rel_tipFive_tip"
                        android:background="@drawable/circle_apptheme_outlining">
                    <TextView
                            android:id="@+id/circularTextView_tip3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/colorBlack"
                            android:layout_centerInParent="true"
                    />
                </RelativeLayout>


                <!--
                        <com.example.rydehomeuser.utils.CircularTextView
                                android:id="@+id/circularTextView_tip1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:gravity="center"
                                android:padding="3dp">
                        </com.example.rydehomeuser.utils.CircularTextView>
                -->


            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/colorBlack"
                        android:text="@string/enter_tip"/>
                <EditText
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:id="@+id/edt_enterTip"
                        android:paddingLeft="@dimen/_6sdp"
                        android:maxLength="6"/>

            </LinearLayout>


            <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/chipGroup_Tip">

            </com.google.android.material.chip.ChipGroup>

            <!--
                        <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorAppTheme"
                                app:closeIconEnabled="true"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:textColor="@color/colorWhite"
                                android:layout_gravity="center_horizontal"
                                app:closeIconTint="@color/colorWhite"
                                android:text="Tip Amount: 50"/>
            -->


            <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:textSize="@dimen/_13sdp"
                    android:id="@+id/done_Tip"
                    android:layout_marginRight="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:backgroundTint="@color/colorAppTheme"
                    android:text="@string/done"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>