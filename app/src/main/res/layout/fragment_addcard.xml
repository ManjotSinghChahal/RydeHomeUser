<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/rootAddCard"
              tools:context=".ui.activities.home.fragment.addCard.Addcard">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="vertical">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:text="@string/card_holder_name"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:maxLength="16"
                    android:textSize="@dimen/_13sdp"
                    android:id="@+id/name_addCard"
                    android:background="@null"
                    android:inputType="textCapWords"
                    android:layout_gravity="center_vertical"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/very_light_gray"></View>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/card_number"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@drawable/card_bw"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:maxLength="16"
                        android:id="@+id/accNum_addCard"
                        android:background="@null"
                        android:inputType="number"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/very_light_gray"></View>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_height="wrap_content">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="5"
                            android:textColorHint="@color/light_gray"
                            android:id="@+id/txtview_exp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:hint="@string/mm_yy"/>
                    <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="@drawable/help"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                    <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_below="@+id/txtview_exp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@color/very_light_gray"></View>

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="number"
                            android:textColorHint="@color/light_gray"
                            android:id="@+id/txtview_cvv"
                            android:maxLength="3"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:hint="@string/cvv"/>
                    <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="@drawable/help"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                    <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_below="@+id/txtview_cvv"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@color/very_light_gray"></View>


                </RelativeLayout>

            </LinearLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/country"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/countryCode_AddCard"
                        app:ccp_showFlag="true"
                        app:ccp_showArrow="false"
                        app:ccp_showFullName="true"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showPhoneCode="false"
                        app:ccp_textSize="@dimen/_14sdp"
                        android:layout_gravity="center_vertical">
                </com.hbb20.CountryCodePicker>


                <!--<ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@drawable/flag"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sdp"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:hint="United Kingdom"/>-->
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/very_light_gray"></View>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="@color/light_gray"
                    android:id="@+id/postCode_addCard"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:hint="@string/postcode"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/very_light_gray"></View>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/rounded_full_themecolored_corners"
                    android:text="@string/next"
                    android:id="@+id/nextAddCard"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>