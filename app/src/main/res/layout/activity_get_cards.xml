<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rootGetCard"
        tools:context=".ui.activities.getCards.GetCards">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:background="@color/colorAppTheme">
        <RelativeLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
        android:id="@+id/relBack_getCards">

            <ImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/home_back_icon"
                    android:background="@drawable/back_icon_white"/>
        </RelativeLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:layout_centerInParent="true"
                android:text="@string/bank_details"/>


    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:background="@color/very_light_gray">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_26sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp"
                android:text="@string/saved_cards"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:id="@+id/addCard_getCards"
                android:visibility="gone"
                android:textColor="@color/colorAppTheme"
                android:layout_marginRight="@dimen/_26sdp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_13sdp"
                android:text="Add New Card"/>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview_cards"
            android:layout_margin="@dimen/_6sdp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>